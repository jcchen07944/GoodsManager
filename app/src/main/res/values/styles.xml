<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:colorBackground">@color/colorAppBackground</item>
    </style>

    <style name="ToolbarItem" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorTextOnPrimary</item>
    </style>

    <style name="SettingTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorSecondary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/colorPrimaryLight</item>
        <item name="tabTextAppearance">@style/SettingTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorTextOnPrimary</item>
    </style>

    <style name="SettingTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextOnPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
